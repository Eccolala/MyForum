<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewSubhead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#232323</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewCaption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#898989</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#232323</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="GridViewImages">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:numColumns">3</item>
        <item name="android:horizontalSpacing">4dp</item>
        <item name="android:verticalSpacing">4dp</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:listSelector">#00000000</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="RadioButtonEmotionDashboard">
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/txtcolor_white2black_sel</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_dgray2white_sel</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
